@{
  Layout = "_Layout";
}

@using PetAdoption.Models;
@model List<PetAdoption.Models.Pet>;
<center>
<h1>Pets</h1>


@if (@Model.Count == 0)
{
  <h3>No pets have been added yet!</h3>
} 
else
{
    @foreach (Pet pets in Model)
    {
      <h3><li>@Html.ActionLink($"{pets.PetName}", "read", new { readID = pets.PetId })</li></h3>
    }

}

<hr/>
<h3>@Html.ActionLink("Add new pet", "Create","Pets")</h3>

<h3>@Html.ActionLink("Home", "Index", "Home")</h3>
</center>